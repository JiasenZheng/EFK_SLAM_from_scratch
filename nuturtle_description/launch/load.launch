<launch>
    <arg name = "use_rviz" default = "true" doc = "whether to view the URDF in Rviz"/>
    <arg name = "use_jsp" default = "true" doc = "whether to use joint state publisher"/>
    <arg name = "color" default = "black" doc = "determine what color is passed to xacro file"/>


    <param name = "robot_description" command="$(find xacro)/xacro
    '$(find nuturtle_description)/urdf/turtlebot3_burger.urdf.xacro' color:=$(arg color)"/>
    <rosparam command="load" file="$(find nuturtle_description)/config/diff_params.yaml" />

    <node name="rviz" pkg="rviz" type="rviz" args = "-d $(find nuturtle_description)/config/basic.rviz" if='$(arg use_rviz)'/>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" if='$(arg use_jsp)' />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" >
        <param name="tf_prefix" value="$(arg color)"/>
    </node>
</launch>