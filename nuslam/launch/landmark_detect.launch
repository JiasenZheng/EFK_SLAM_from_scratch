<launch>
    <rosparam command = "load" file="$(find nuslam)/config/landmark.yaml"/>
    <rosparam command = "load" file = "$(find nusim)/config/basic_world.yaml"/>

    <include file = "$(find nuturtle_description)/launch/load.launch">
        <arg name = "use_rviz" value = "false"/>
        <arg name = "use_jsp" value = 'false'/>
        <arg name = "color" value = "red"/>
    </include>
    <node name = "rviz" pkg = "rviz" type = "rviz" args = "-d $(find nuslam)/config/landmarks.rviz"/>

    <node name = "nusim" pkg = "nusim" type = "nusim"/>
    <node name = "landmarks" pkg = "nuslam" type = "landmarks" output = "screen"/>
    <node name = "turtlebot3_teleop_key" pkg = "turtlebot3_teleop" type = "turtlebot3_teleop_key" output = "screen"/>

    <node name = "turtle_interface" pkg = "nuturtle_control" type = "turtle_interface" output = "screen">
        <remap from="/joint_states" to="red/joint_states"/>
        <remap from="/wheel_cmd" to="red/wheel_cmd"/>
        <remap from="/sensor_data" to="red/sensor_data"/>
        <!-- <remap from="/sensor_data" to="/scan"/> -->
    </node>

</launch>